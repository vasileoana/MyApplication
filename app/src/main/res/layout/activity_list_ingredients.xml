<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#f7f7dd"
    tools:context="com.google.android.myapplication.Activities.ListIngredientsActivity">

<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_margin="10dp"
    android:background="#f7f7dd"
    android:layout_gravity="center_horizontal">
   <Button
       android:text="@string/Save_analysis"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:id="@+id/btnSaveAnalysis"
       android:textColor="#fff"
android:layout_margin="10dp"
       android:padding="5dp"
       android:background="@color/colorPrimary"
       />
   <Button
       android:text="@string/Add_ing"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:id="@+id/btnAddIng"
       android:textColor="#fff"
       android:layout_margin="10dp"
   android:padding="5dp"
       android:background="@color/colorPrimary"
       />
</LinearLayout>

<ListView
    android:padding="17sp"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/lvIng"
    android:background="#f7f7dd"
    />
</LinearLayout>
