<?xml version="1.0" encoding="utf-8"?>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">


    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/cosmetic"
        android:layout_marginEnd="15dp"/>
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"

>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/LinearLayout"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tvAnalysysCategoryName"
                android:textColor="#86867e"
                android:textSize="14sp"
                />
            <TextView
                android:layout_alignParentEnd="true"
                android:paddingEnd="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tvAnalysysBrandName"
                android:textColor="#C17788"
                android:textSize="16sp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tvAnalysysProductFunction"
                android:textColor="#47a386"
                android:textSize="13sp"/>


        </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:id="@+id/tvAnalysysDate"
        android:layout_margin="20dp"
        />

    </RelativeLayout>

</LinearLayout>
